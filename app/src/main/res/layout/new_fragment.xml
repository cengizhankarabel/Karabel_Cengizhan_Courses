<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewCourse"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/titleSize"
            android:text="@string/course_code"/>
        <EditText
            android:id="@+id/edit_courseCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/enter_course_code"
            android:layout_marginLeft="@dimen/marginLeft"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/titleSize"
            android:text="@string/course_name"/>
        <EditText
            android:id="@+id/edit_courseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/enter_course_name"
            android:layout_marginLeft="@dimen/marginLeft"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/titleSize"
            android:text="@string/course_grade"/>
        <EditText
            android:id="@+id/edit_courseGrade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/enter_course_grade"
            android:layout_marginLeft="@dimen/marginLeft"
            android:digits="ABCDF"
            android:maxLength="2"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/titleSize"
            android:text="@string/course_credit"/>
        <EditText
            android:id="@+id/edit_courseCredit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/enter_course_credit"
            android:layout_marginLeft="@dimen/marginLeft"
            android:inputType="number"
            android:maxLength="1"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/titleSize"
            android:text="@string/is_passed"/>
        <CheckBox
            android:id="@+id/edit_isPassed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marginLeft"/>
    </LinearLayout>

    <Button
        android:id="@+id/addNewCourse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_new_course"
        android:layout_gravity="center_horizontal"/>


</LinearLayout>